@model GarasiMobil.Models.Car

@{
    ViewData["Title"] = "Tambah Mobil Baru";
}

<div class="container" style="max-width: 700px; margin-top: 3rem;">
    <div style="text-align: center; margin-bottom: 2rem;">
        <h1 class="section-title" style="color: white;">
            <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 2.5rem;">add_circle</span>
            Tambah Mobil Baru
        </h1>
        <p style="color: var(--color-metalic-gray);">Lengkapi data mobil yang ingin ditambahkan ke koleksi</p>
    </div>

    <form asp-action="Create" method="post" style="background-color: #111; padding: 2rem; border-radius: 1rem; border: 1px solid rgba(255,255,255,0.1); color: white;">
        <div class="mb-3">
            <label class="form-label">Merk</label>
            <input asp-for="Merk" class="form-control" style="background-color: #222; color: white; border: none;" placeholder="Contoh: Toyota" />
        </div>

        <div class="mb-3">
            <label class="form-label">Model</label>
            <input asp-for="Model" class="form-control" style="background-color: #222; color: white; border: none;" placeholder="Contoh: Avanza" />
        </div>

        <div class="mb-3">
            <label class="form-label">Tahun</label>
            <input asp-for="Tahun" class="form-control" type="number" style="background-color: #222; color: white; border: none;" placeholder="Contoh: 2021" />
        </div>

        <div class="mb-3">
            <label class="form-label">Harga</label>
            <input asp-for="Harga" class="form-control" type="number" style="background-color: #222; color: white; border: none;" placeholder="Contoh: 250000000" />
        </div>

        <div class="mb-3">
            <label class="form-label">Warna</label>
            <input asp-for="Warna" class="form-control" style="background-color: #222; color: white; border: none;" placeholder="Contoh: Hitam" />
        </div>

        <div class="mb-3">
            <label class="form-label">URL Gambar Mobil</label>
            <input asp-for="GambarUrl" class="form-control" style="background-color: #222; color: white; border: none;" placeholder="Tempel URL gambar mobil (misal: https://...)" />
            <small style="color: var(--color-metalic-gray);">Gunakan URL gambar valid dari internet atau link file Anda</small>
        </div>

        <div style="text-align: right; margin-top: 2rem;">
            <a asp-action="Index" class="btn btn-secondary" style="background-color: #333; color: white; border: none; margin-right: 0.5rem;">Batal</a>
            <button type="submit" class="btn-primary" style="background-color: var(--color-primary); color: black; border: none;">Simpan Mobil</button>
        </div>
    </form>
</div>

<style>
    .form-control:focus {
        box-shadow: 0 0 0 2px var(--color-primary);
    }
</style>
