@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GarasiMobil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, var(--color-background-dark) 0%, #1a1a1a 100%); padding: 1rem; position: relative; overflow: hidden;">
        
        <!-- Background Pattern -->
        <div style="position: absolute; inset: 0; opacity: 0.05;">
            <div style="position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background-image: radial-gradient(circle, var(--color-primary) 1px, transparent 1px); background-size: 50px 50px;"></div>
        </div>

        <!-- Login Card -->
        <div style="position: relative; z-index: 10; width: 100%; max-width: 450px;">
            <div style="background-color: var(--color-surface-dark); border: 1px solid rgba(212, 175, 55, 0.2); border-radius: 1.5rem; padding: 3rem; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);">
                
                <!-- Logo & Header -->
                <div style="text-align: center; margin-bottom: 2.5rem;">
                    <div style="display: inline-flex; align-items: center; justify-content: center; width: 80px; height: 80px; background: linear-gradient(135deg, var(--color-primary) 0%, #EFC94C 100%); border-radius: 1.5rem; margin-bottom: 1.5rem; box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);">
                        <span class="material-symbols-outlined" style="font-size: 3rem; color: var(--color-background-dark);">directions_car</span>
                    </div>
                    <h1 style="color: white; font-size: 2rem; font-weight: bold; margin-bottom: 0.5rem;">GarasiMobil</h1>
                    <p style="color: var(--color-metalic-gray); font-size: 0.875rem;">Masuk untuk mengelola sistem Anda</p>
                </div>

                <!-- Error Alert -->
                @if (ViewBag.Error != null)
                {
                    <div style="background-color: rgba(220, 38, 38, 0.1); border: 1px solid rgba(220, 38, 38, 0.3); border-radius: 0.75rem; padding: 1rem; margin-bottom: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <i class="bi bi-exclamation-triangle" style="color: #ef4444; font-size: 1.25rem;"></i>
                            <span style="color: #fca5a5; font-size: 0.875rem;">@ViewBag.Error</span>
                        </div>
                    </div>
                }

                <!-- Login Form -->
                <form method="post">
                    <!-- Username Input -->
                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: block; color: white; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.5rem;">
                            <i class="bi bi-person me-2"></i>Username
                        </label>
                        <div style="position: relative;">
                            <input type="text" name="username" 
                                   style="width: 100%; padding: 0.875rem 1rem 0.875rem 3rem; background-color: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 0.75rem; color: white; font-size: 0.875rem; transition: all 0.3s;" 
                                   placeholder="Masukkan username Anda" 
                                   required 
                                   onfocus="this.style.borderColor='var(--color-primary)'; this.style.backgroundColor='rgba(212, 175, 55, 0.05)';"
                                   onblur="this.style.borderColor='rgba(255, 255, 255, 0.1)'; this.style.backgroundColor='rgba(255, 255, 255, 0.05)';" />
                            <i class="bi bi-person-circle" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--color-metalic-gray); font-size: 1.25rem;"></i>
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div style="margin-bottom: 2rem;">
                        <label style="display: block; color: white; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.5rem;">
                            <i class="bi bi-lock me-2"></i>Password
                        </label>
                        <div style="position: relative;">
                            <input type="password" name="password" id="passwordInput"
                                   style="width: 100%; padding: 0.875rem 3rem 0.875rem 3rem; background-color: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 0.75rem; color: white; font-size: 0.875rem; transition: all 0.3s;" 
                                   placeholder="Masukkan password Anda" 
                                   required 
                                   onfocus="this.style.borderColor='var(--color-primary)'; this.style.backgroundColor='rgba(212, 175, 55, 0.05)';"
                                   onblur="this.style.borderColor='rgba(255, 255, 255, 0.1)'; this.style.backgroundColor='rgba(255, 255, 255, 0.05)';" />
                            <i class="bi bi-shield-lock" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--color-metalic-gray); font-size: 1.25rem;"></i>
                            <i class="bi bi-eye" id="togglePassword" 
                               style="position: absolute; right: 1rem; top: 50%; transform: translateY(-50%); color: var(--color-metalic-gray); font-size: 1.25rem; cursor: pointer;"
                               onclick="togglePasswordVisibility()"></i>
                        </div>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                        <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                            <input type="checkbox" name="remember" style="width: 1rem; height: 1rem; accent-color: var(--color-primary);">
                            <span style="color: var(--color-metalic-gray); font-size: 0.875rem;">Ingat saya</span>
                        </label>
                        <a href="#" style="color: var(--color-primary); font-size: 0.875rem; text-decoration: none; font-weight: 600;">
                            Lupa password?
                        </a>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="btn-primary" style="width: 100%; padding: 1rem; font-size: 1rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Masuk ke Dashboard
                    </button>
                </form>

                <!-- Register Link -->
                <div style="text-align: center; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid rgba(255, 255, 255, 0.1);">
                    <p style="color: var(--color-metalic-gray); font-size: 0.875rem; margin: 0;">
                        Belum punya akun? 
                        <a href="/Register" style="color: var(--color-primary); font-weight: 600; text-decoration: none; margin-left: 0.25rem;">
                            Daftar Sekarang
                        </a>
                    </p>
                </div>
            </div>

            <!-- Additional Info -->
            <div style="text-align: center; margin-top: 2rem;">
                <p style="color: var(--color-metalic-gray); font-size: 0.75rem;">
                    <i class="bi bi-shield-check me-1"></i>
                    Keamanan data Anda terjamin dengan enkripsi tingkat enterprise
                </p>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('togglePassword');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
</body>
</html>